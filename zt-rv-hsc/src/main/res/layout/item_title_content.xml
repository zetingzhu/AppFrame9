<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_item_name"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:text="名字"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <com.zzt.aaa.RVNestHorizontalScrollView
        android:id="@+id/right_nest_hsv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/right_scroll"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_1"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="第一"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_item_2"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="#8DB4EC"
                android:gravity="center"
                android:text="第二"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_item_3"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="第三"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_item_4"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="第四"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_item_5"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="#A4F4AB"
                android:gravity="center"
                android:text="第五"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_item_6"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="第六"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>
    </com.zzt.aaa.RVNestHorizontalScrollView>
</LinearLayout>